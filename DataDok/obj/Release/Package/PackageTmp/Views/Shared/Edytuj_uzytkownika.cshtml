@{
    ViewBag.Title = "Edytuj użytkownika";
}

<h2>Edytowanie użytkownika</h2>

<form action="~/Users/Zapisz" method="post" accept-charset="utf-8">

    <div class="mb-3">
        Uzytkownik id: @TempData["id_uzytkownika"] 
        <input type="hidden" name="id_uzyt" value="@TempData["id_uzytkownika"]">
    </div>
    <div class="mb-3">
        Imię:
        <input type="text" name="imie" />
    </div>
    <div class="mb-3">
        Nazwisko:
        <input type="text" name="nazwisko" />
    </div>
    <div class="mb-3">
        Email:
        <input type="text" name="email" />
    </div>
    <div class="mb-3">
        Login:
        <input type="text" name="login" />
    </div>
    <div class="mb-3">
        Hasło:
        <input type="text" name="haslo" />
    </div>

    <button type="submit" class="btn btn-light">Zapisz</button>

</form>


